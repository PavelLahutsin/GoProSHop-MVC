<ul class="nav navbar-nav navbar-left">
    <li class="dropdown mega-dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="fa fa-bars fa-lg" style="padding-right: 10px"></span>Каталог</a>
        <ul class="dropdown-menu mega-dropdown-menu row" style="margin-top: 17px;">
            @foreach (var item in Model)
            {
                <li class="col-md-3">
                    <ul>
                        <li class="dropdown-header">@item.Name </li>
                        @foreach (var group in item.ProductSubGroups)
                        {
                            <li><a href="@Url.Action("Index", "Catalog", new {id = group.Id})">@group.Name</a></li>
                        }
                    </ul>
                </li>
            }
        </ul>

    </li>
    @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
    {
        <li>@Html.ActionLink("Админ", "Index", "Admin")</li>
    }
</ul>

@model GoProShop.ViewModels.UserRegisterVM
<div id="modalContent">
    @using (Ajax.BeginForm("Register", "Account", new AjaxOptions
    {
        UpdateTargetId = "modalContent",
        HttpMethod = "POST",
        InsertionMode = InsertionMode.Replace
    }))
    {
        <div class="modal-body">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(false, null, new {@class = "text-danger"})
            <div class="form-horizontal">
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Email, new {htmlAttributes = new {@class = "form-control"}})
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.UserName, new {htmlAttributes = new {@class = "form-control"}})
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Password, new {htmlAttributes = new {@class = "form-control"}})
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.PasswordConfirm, new {htmlAttributes = new {@class = "form-control"}})
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn btn-default" data-dismiss="modal" area-hidden="true">close</button>
            <button class="btn btn-primary" type="submit">register</button>
        </div>
    }
</div>

@Scripts.Render("~/scripts/jquery.unobtrusive-ajax.min.js")
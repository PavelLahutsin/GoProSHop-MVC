@model GoProShop.ViewModels.UserRegisterVM
    <div class="login-modal">


    @using (Ajax.BeginForm("Register", "Account", new AjaxOptions
    {
        UpdateTargetId = "mainDialogContent",
        HttpMethod = "POST",
        InsertionMode = InsertionMode.Replace,
        OnSuccess = "unloadModal"
    }))
    {
        @Html.Partial("_ModalHeader")
        <div class="modal-body">
            <div class="row text-center">
                <h5 class="header-text">Создание нового пользователя</h5>
            </div>
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control login-form-control", @placeholder = "Введите ваш email", } })
                @Html.ValidationMessageFor(model => model.Email, null, new { @class = "text-danger", data_test_id = "email-error-message" })
            </div>

            <div class="form-group">
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control login-form-control", @placeholder = "Введите ваш логин" } })
                @Html.ValidationMessageFor(model => model.UserName, null, new { @class = "text-danger", data_test_id = "email-error-message" })
            </div>

            <div class="form-group">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control login-form-control", @placeholder = "Введите ваш пароль" } })
                @Html.ValidationMessageFor(model => model.Password, null, new { @class = "text-danger", data_test_id = "email-error-message" })
            </div>

            <div class="form-group">
                @Html.EditorFor(model => model.PasswordConfirm, new { htmlAttributes = new { @class = "form-control login-form-control", @placeholder = "Подтверждение пароля" } })
                @Html.ValidationMessageFor(model => model.PasswordConfirm, null, new { @class = "text-danger", data_test_id = "email-error-message" })
            </div>

            <div class="row">
                <div class="col-md-1">
                    <label class="check-box-container">
                        <input type="checkbox" checked="checked">
                        <span class="checkmark"></span>
                    </label>
                </div>
                <div class="col-md-11">
                    <label>Подписаться на наши GoPro новости</label>
                </div>
            </div>

        </div>
        <div class="modal-footer">
            <div class="row">
                <div class="col-md-12">
                    <button class="btn btn-primary login-btn btn-block" type="submit"><strong>Регистрация</strong></button>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12 text-center" style="padding-top: 10px">
                    <text style="font-size: 12px;" class="text-center">
                        По нажатию на кнопку "Регистрация" выше, вы соглашаетесь с Правилами пользования
                        нашим сайтом.
                    </text>
                </div>
            </div>
        </div>
    }
</div>
@model GoProShop.ViewModels.UserRegisterVM
<div id="modalContent">
    @using (Ajax.BeginForm("Register", "Account", new AjaxOptions
    {
        UpdateTargetId = "modalContent",
        HttpMethod = "POST",
        InsertionMode = InsertionMode.Replace,
        OnSuccess = "unloadModal"
    }))
    {
    <div class="modal-body">
        <div class="row text-center">
            <h5><strong>СОЗДАНИЕ НОВОГО ПОЛЬЗОВАТЕЛЯ</strong></h5>
        </div>
        @Html.AntiForgeryToken()
        <div class="alert-danger" style="border-radius: 5px;">
            @Html.ValidationSummary(false, null, new { @class = "text-danger"})
        </div>
 

        <div class="form-group">
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control login-form-control", @placeholder = "Введите ваш email", } })
        </div>

        <div class="form-group">
            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control login-form-control", @placeholder = "Введите ваш логин" } })
        </div>

        <div class="form-group">
            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control login-form-control", @placeholder = "Введите ваш пароль" } })
        </div>

        <div class="form-group">
            @Html.EditorFor(model => model.PasswordConfirm, new { htmlAttributes = new { @class = "form-control login-form-control", @placeholder = "Подтверждение пароля" } })
        </div>

        <div class="row">
            <div class="col-md-1">
                <label class="check-box-container">
                    <input type="checkbox" checked="checked">
                    <span class="checkmark"></span>
                </label>
            </div>
            <div class="col-md-11">
                <label>Подписаться на наши GoPro новости</label>
            </div>
        </div>

    </div>
        <div class="modal-footer">
            <div class="row">
                <div class="col-md-12">
                    <button class="btn btn-primary login-btn" type="submit"><strong>Регистрация</strong></button>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12 text-center" style="padding-top: 10px">
                    <text style="font-size: 12px;" class="text-center">
                        По нажатию на кнопку "Регистрация" выше, вы соглашаетесь с Правилами пользования
                        нашим сайтом.
                    </text>
                </div>
            </div>
        </div>
    }
    </div>

    @Scripts.Render("~/scripts/jquery.unobtrusive-ajax.min.js")
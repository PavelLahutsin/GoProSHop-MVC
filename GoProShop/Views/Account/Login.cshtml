
@model GoProShop.ViewModels.UserLoginVM

@using (Ajax.BeginForm("Login", "Account", new AjaxOptions
{
    UpdateTargetId = "modalContent",
    HttpMethod = "POST",
    InsertionMode = InsertionMode.Replace,
    OnSuccess = "unloadModal"
}))
{

    @Html.Partial("_ModalHeader")
    <div class="modal-body login-modal">
        <div class="row text-center">
            <h4 class="header-text">Авторизация</h4>
        </div>
        @Html.AntiForgeryToken()
        <div class="alert-danger" style="border-radius: 5px">
            @Html.ValidationSummary(false, null, new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control login-form-control", @placeholder = "Введите email или логин", autocomplete="off" } })
        </div>

        <div class="form-group">
            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control login-form-control", @placeholder = "Введите ваш пароль", autocomplete = "off" } })
        </div>
    </div>

    <div class="modal-footer">
        <button class="btn btn-primary btn-block login-btn" type="submit"><strong>Войти</strong></button>
    </div>
}




@model IEnumerable<GoProShop.ViewModels.BaseFeedbackVM>

<div style="min-height: 50px">
    @if (Model.Count() > 0)
    {
        foreach (var feedback in Model)
        {
            <div class="col-md-3 text-left" style="padding-top: 15px">
                <h5 style="font-weight: normal"><strong>@feedback.Name</strong></h5>
                <h6 style="padding: 0" class="text-muted">@feedback.Date.ToShortDateString()</h6>
            </div>

            <div class="col-md-9" style="padding-right: 0;">
                <div style="padding-bottom: 7px;padding-left: 7px">
                    @for (int i = 1; i < 6; i++)
                    {
                        if (i <= feedback.Rating)
                        {
                            <span class="fa fa-star fa-star-selected"></span>
                        }
                        else
                        {
                            <span class="fa fa-star"></span>
                        }
                    }
                </div>
                <div class="arrow_box">
                    @feedback.Message
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-info">
            <div class="row">
                <div class="col-md-1 text-right">
                    <i class="fa fa fa-warning fa-2x"></i>
                </div>
                <div class="col-md-11 text-left" style="padding-top: 3px;">
                    На текущий момент данный товар не имеет отзывов
                </div>
            </div>
        </div>
    }
</div>

<div class="col-md-12 text-center">
    <h4 class="header-text-black">Написать отзыв</h4>
</div>
<div style="margin-bottom: 40px">
    @Html.Action("Create", "Feedback", new { productId = ViewBag.ProductId })
</div>

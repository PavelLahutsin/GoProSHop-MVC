@model IEnumerable<GoProShop.ViewModels.BaseFeedbackVM>

<div style="min-height: 50px">
    @if (Model.Count() > 0)
    {
        foreach (var feedback in Model)
        {
            <h5 style="padding-bottom: 10px;font-weight: normal"><strong>@feedback.Name</strong> от @feedback.Date.ToShortDateString()</h5>

            <div class="arrow_box">
                @feedback.Message
            </div>
        }
    }
    else
    {
        <div class="alert alert-info">
            <div class="row">
                <div class="col-md-1 text-right">
                    <i class="fa fa fa-warning fa-2x"></i>
                </div>
                <div class="col-md-11 text-left" style="padding-top: 3px;">
                    На текущий момент данный товар не имеет отзывов
                </div>
            </div>
        </div>
    }

</div>

<div class="col-md-12 text-center">
    <h4 style="font-weight: 800; padding-bottom: 14px;">Написать отзыв</h4>
</div>
<div style="margin-bottom: 40px">
    @Html.Action("Create","Feedback", new { productId = ViewBag.ProductId })
</div>
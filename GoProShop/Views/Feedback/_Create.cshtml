@model GoProShop.ViewModels.FeedbackVM

@{
    var options = new AjaxOptions
    {
        InsertionMode = InsertionMode.Replace,
        UpdateTargetId = "mainFeedback",
        HttpMethod = "POST"
    };
}

<div id="mainFeedback">
    @using (Ajax.BeginForm("Create", "Feedback", options))
    {
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-md-12">
                <div class="alert-danger" style="border-radius: 5px">
                    @Html.ValidationSummary(false, null, new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                @if (ViewBag.ProductId != null)
                {
                    @Html.Hidden("ProductId", (int)ViewBag.ProductId)
                }

                <input type="hidden" name="Rating" id="Rating" />
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Имя" } })
                @Html.EditorFor(model => model.SurName, new { htmlAttributes = new { @class = "form-control", placeholder = "Фамилия" } })
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Email" } })
                <input type="submit" class="btn btn-primary btn-block" value="Отправить" />
            </div>
            <div class="col-md-6">
                <div class="form-inline" style="height: 40px; padding-top: 7px; margin-bottom: 7px;" onmouseout="CRateSelected()">
                    <text style="margin-right: 7px;">Оцените нашу работу:</text>
                    @for (int i = 1; i < 6; i++)
                    {
                        <span class="fa fa-star fa-lg" id="Rate@(i)" onclick="CRate(@i)" onmouseover="CRateOver(@i)" onmouseout="CRateOut(@i)"></span>
                    }
                </div>
                @Html.TextAreaFor(model => model.Message, new { @class = "form-control", style = "overflow-x: hidden;", rows = 7, placeholder = "Сообщение" })

            </div>
        </div>
    }
</div>
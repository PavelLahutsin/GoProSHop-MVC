@model GoProShop.ViewModels.Cart
@{
    var count = 1;
    var options = new AjaxOptions
    {
        HttpMethod = "GET",
        UpdateTargetId = "checkout-content"
    };
}

<div class="container" style="padding-top: 25px;">
    <div class="row">
        <div class="col-md-12">
            <h3 style="margin-top: 0; font-weight: 400; padding-bottom: 7px;">Оформление заказа</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <div class="row">
                <div class="col-md-12">
                    <div id="checkout-content">
                        <table class="table table-condensed">
                            <thead>
                                <tr style="height: 50px; line-height: 50px; vertical-align: middle;background: #eee">
                                    <th class="text-center">№</th>
                                    <th>Изображение</th>
                                    <th>Название</th>
                                    <th class="text-center">Количество</th>
                                    <th>Цена</th>
                                    <th>Действия</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var cartItem in Model.CartItems)
                                {
                                    <tr>
                                        <td width="50" class="text-center">@count</td>
                                        <td width="100" class="text-center">
                                            @if (cartItem.Product.MimeType == null)
                                            {
                                                <img height="50" width="50" src="~/Content/Images/No_Image_Available.png" alt="Фото" />
                                            }
                                            else
                                            {
                                                <img height="50" width="60" src="@Url.Action("GetImage", "Product", new {productId = cartItem.Product.Id})" alt="Фото">
                                            }
                                        </td>
                                        <td class="text-left" style="font-size: 13px;">
                                            <a href="@Url.Action("ViewProduct","Product", new { productId = cartItem.Product.Id })">@cartItem.Product.Name</a>
                                        </td>
                                        <td width="150" class="text-center">
                                            <div class="form-inline">
                                                <a class="btn btn-default btn-sm"><i class="fa fa-minus"></i></a>
                                                <input class="form-control form-control-sm" value="@cartItem.Quantity" />
                                                <a class="btn btn-default btn-sm"><i class="fa fa-plus"></i></a>
                                            </div>
                                        </td>
                                        <td width="90" style="font-size: 13px;text-align: left;">
                                            @Html.DisplayFor(modelItem => cartItem.Product.Price) р.
                                        </td>
                                        <td width="100" class="text-center">
                                            <a href="@Url.Action("RemoveCartItem","Cart", new { id = cartItem.Product.Id })" onclick="deleteCartItemModal(event, this)"><span class="fa fa-trash-o text-danger fa-lg"></span></a>
                                        </td>
                                    </tr>
                                    count++;
                                }
                            </tbody>
                        </table>
                        <div class="col-md-12">
                            @Ajax.ActionLink("Продолжить", "Create", "Order", null, options, new { @class = "btn btn-success btn-sm pull-right" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="row">
                <div class="col-md-12">
                    <div id="order-box-content">
                        @Html.Action("OrderInfo", "Cart")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

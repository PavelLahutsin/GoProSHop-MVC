@model GoProShop.ViewModels.Cart
@{
    GoProShop.ViewModels.CartItem cartitem = null;
}
<div id="modalBody">
    <div class="modal-header">
        <ul class="registration-nav">
            <li class="navbar-text pull-left" style="color: white"><strong>Корзина</strong></li>
            <li class="pull-right"><a class="close-thik" data-dismiss="modal"></a></li>
        </ul>
    </div>
    <div class="modal-body">
        <table class="table">
            <thead>
                <tr>
                    <th class="text-center">
                        @Html.DisplayNameFor(x => cartitem.Product.Image)
                    </th>
                    <th>
                        @Html.DisplayNameFor(x => cartitem.Product.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(x => cartitem.Quantity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(x => cartitem.Product.Price)
                    </th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <td colspan="3" class="text-right">
                        @Html.DisplayNameFor(model => model.TotalSum)
                    </td>
                    <td><strong>@Model.TotalSum</strong></td>
                </tr>

            </tfoot>
            <tbody>
                @foreach (var item in Model.CartItems)
            {
                    <tr>
                        <td class="text-center">
                            @if (item.Product.MimeType == null)
                            {
                                <img height="40" width="40" src="~/Content/Images/No_Image_Available.png" alt="Фото" />
                            }
                            else
                            {
                                <img height="40" width="50" src="@Url.Action("GetImage", "Product", new {productId = item.Product.Id})" alt="Фото">
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Product.Name)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.Quantity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Product.Price)
                        </td>
                    </tr>
                }
            </tbody>


        </table>
    </div>
    <div class="modal-footer">
        @using (Html.BeginForm("", "", FormMethod.Post))
        {
            <input class="btn btn-link pull-right" style="width: 80px" data-dismiss="modal" value="Отмена">
            <input type="submit" class="btn btn-primary pull-right" value="Заказать">

        }
    </div>
</div>

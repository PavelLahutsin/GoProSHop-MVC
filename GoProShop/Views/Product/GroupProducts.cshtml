@model IEnumerable<GoProShop.ViewModels.ProductVM>

<div>    
    <div class="row" style="margin-top: 15px; margin-bottom: 15px">
        <div class="form-inline">
            <button class="btn btn-success"><span class="fa fa-plus"></span></button>
        </div>
    </div>

    <table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductGroupId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductGroupId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Image)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a class="btn btn-primary btn-sm" href="@Url.Action("Details","Product", new { id = item.Id })"><span class="fa fa-info-circle"></span> </a>
                    <a class="btn btn-danger btn-sm" href="@Url.Action("Delete","Product", new { id = item.Id })"><span class="fa fa-close"></span> </a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
@model IEnumerable<GoProShop.ViewModels.ProductSubGroupVM>

@{
    var options = new AjaxOptions
    {
        HttpMethod = "GET",
        InsertionMode = InsertionMode.Replace,
        UpdateTargetId = "products"
    };
}

<div class="input-group" style="padding: 14px">   
    <input id="email" type="text" class="form-control" name="email" placeholder="Поиск...">
    <span class="input-group-addon"><i class="fa fa-search"></i></span>
</div>

<div class="list-group product-group">
    @foreach (var item in Model)
    {
        @Ajax.ActionLink(item.Name, "SubGroupProducts", "Product", new { id = item.Id }, options, new { @class = "list-group-item list-group-product-groups" })
    }
</div>
   



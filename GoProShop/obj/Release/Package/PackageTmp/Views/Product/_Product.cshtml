@model GoProShop.ViewModels.ProductVM

<div class='col-md-4'>
    <div class="panel panel-default" style="min-height: 300px; margin: 0 7px 14px 7px">

        <div class="panel-body text-center ">
            @if (Model.MimeType == null)
            {
                <img height="150" src="~/Content/Images/No_Image_Available.png" />
                <p>Нет изображения</p>
            }
            else
            {
                <img height="150" src="@Url.Action("GetImage", "Product", new { productId = Model.Id })">
            }

            <div>
                <h4>@Model.Name</h4>
            </div>
            <div class="item-description">
                @Model.Description
            </div>
        </div>

        <div class="panel-footer">
            <a href="#" class="btn btn-primary btn-sm pull-right bottom-right">
                <span class="fa fa-shopping-cart"></span>
            </a>
        </div>



    </div>
</div>


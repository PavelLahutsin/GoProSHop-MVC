
@model GoProShop.ViewModels.UserLoginVM
<div id="modalContent">
    @using (Ajax.BeginForm("Login", "Account", new AjaxOptions
    {
        UpdateTargetId = "modalContent",
        HttpMethod = "POST",
        InsertionMode = InsertionMode.Replace,
        OnSuccess = "unloadModal"
    }))
    {
        <div class="modal-body">
            <div class="row text-center">
                <h5><strong>АВТОРИЗАЦИЯ</strong></h5>
            </div>
            @Html.AntiForgeryToken()
            <div class="alert-danger" style="border-radius: 5px">
                @Html.ValidationSummary(false, null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control login-form-control", @placeholder = "Введите email или логин" } })
            </div>

            <div class="form-group">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control login-form-control", @placeholder = "Введите ваш пароль" } })
            </div>
        </div>

        <div class="modal-footer">
                <button class="btn btn-primary login-btn" type="submit"><strong>Войти</strong></button>
            <div class="row text-center">
                <div class="col-md-12" style="padding-top: 10px">
                    <a href="@Url.Action("RestorePassword","Account")">
                        <span class="fa fa-lock"></span>  Забыли пароль?
                    </a>
                </div>
            </div>
        </div>
    }
</div>



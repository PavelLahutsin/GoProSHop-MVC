@if (User.Identity.IsAuthenticated)
{
    <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
            <a href="#" style="padding-bottom: 12.5px; padding-top: 12.5px" data-toggle="dropdown" class="dropdown-toggle">
                <img height="25" src="~/Content/Images/DefaultUserLogo.png" />
                <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
                <li><a href="@Url.Action("Edit","Account")">Настройки</a></li>
                <li><a href="@Url.Action("Logout","Account")"><span class="fa fa-sign-out"></span>  Выйти</a></li>
            </ul>
        </li>
    </ul>
}
else
{
    <div id="loginModal" class="modal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <ul class="registration-nav">
                        <li><a onclick="getMethodClickHandler(event, this,'#modalContent')" href="@Url.Action("Login", "Account")"><strong>Логин</strong></a></li>
                        <li><a onclick="getMethodClickHandler(event, this,'#modalContent')" href="@Url.Action("Register", "Account")"><strong>Регистрация</strong></a></li>
                        <li class="pull-right"><a class="close-thik" data-dismiss="modal"></a></li>
                    </ul>
                </div>
                <div id="dialogContent">
                </div>
            </div>
        </div>
    </div>

    <ul class="nav navbar-nav navbar-right">
        <li><a href="@Url.Action("Login", "Account")" onclick="loginClickHandler(event, this)"><span class="fa fa-sign-in"></span>  Войти</a></li>
    </ul>
}

